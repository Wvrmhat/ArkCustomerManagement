@model List<ArkCustomerManagement.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="AddCustomer" class="btn btn-primary mb-3">Add New Customer</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Contact Person</th>
                <th>Email</th>
                <th>VAT</th>
                <th>Telephone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Address</td>
                    <td>@customer.ContactPersonName</td>
                    <td>@customer.ContactPersonEmail</td>
                    <td>@customer.Vat</td>
                    <td>@customer.TelephoneNumber</td>
                    <td>
                    @Html.ActionLink("Edit", "EditCustomer", new { id = customer.CustomerId }, new { @class = "btn btn-sm btn-secondary" })
                    @Html.ActionLink("Delete", "DeleteCustomer", new { id = customer.CustomerId }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to delete this customer?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>